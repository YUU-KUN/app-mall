                <!-- Modal Tambah Distributor-->
                <div class="modal fade" id="modalAddPembelian" tabindex="-1" role="dialog"
                    aria-labelledby="modalAddPembelianTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Tambah Pembelian </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="card-body">
                                    <div class="card-title">
                                        <h3 class="text-center title-2">Form Tambah Pembelian</h3>
                                    </div>
                                    <hr>
                                    <form action="/pembelian/add" method="post" novalidate="novalidate">
                                        <div class="form-group">
                                            <label for="x_card_code" class="control-label mb-1">Nama</label>
                                                <div class="input-group">
                                                    <select id="cc-exp" name="nama" type="text"
                                                        class="form-control cc-exp" value="" data-val="true"
                                                        {{!-- data-val-required="Mohon isi Kategori Produk" --}}
                                                        {{!-- data-val-cc-exp="Mohon isi dengan Huruf" --}}
                                                        placeholder="Produk" autocomplete="cc-exp">
                                                        {{#each data.result2.distributor}}
                                                        <option value="{{this}}">{{this}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="x_card_code" class="control-label mb-1">Produk</label>
                                                <div class="input-group">
                                                    <select id="cc-exp" name="produk" type="text"
                                                        class="form-control cc-exp" value="" data-val="true"
                                                        {{!-- data-val-required="Mohon isi Kategori Produk" --}}
                                                        {{!-- data-val-cc-exp="Mohon isi dengan Huruf" --}}
                                                        placeholder="Produk" autocomplete="cc-exp">
                                                        {{#each data.result2.produk}}
                                                        <option value="{{this}}">{{this}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group has-success">
                                                    <label for="cc-name" class="control-label mb-1">Jumlah</label>
                                                    <input id="cc-name" name="jumlah" type="number"
                                                        class="form-control cc-name valid" data-val="true"
                                                        data-val-required="Mohon isi Jumlah" autocomplete="cc-name"
                                                        aria-required="true" aria-invalid="false"
                                                        aria-describedby="cc-name-error" placeholder="Jumlah">
                                                    <span class="help-block field-validation-valid"
                                                        data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group has-success">
                                                    <label for="cc-name" class="control-label mb-1">Harga Beli</label>
                                                    <input id="cc-name" name="harga_beli" type="number"
                                                        class="form-control cc-name valid" data-val="true"
                                                        data-val-required="Mohon isi Harga Beli" autocomplete="cc-name"
                                                        aria-required="true" aria-invalid="false"
                                                        aria-describedby="cc-name-error" placeholder="Harga Beli">
                                                    <span class="help-block field-validation-valid"
                                                        data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <hr>

                                        <div class="form-group">
                                            <label for="cc-payment" class="control-label mb-1">Tanggal</label>
                                            <input id="cc-pament" name="tanggal" type="date" class="form-control"
                                                aria-required="true" aria-invalid="false" placeholder="Tanggal">
                                        </div>

                                        <div class="form-group">
                                            <label for="cc-payment" class="control-label mb-1">Invoice</label>
                                            <input id="cc-pament" name="inv" type="text" class="form-control"
                                                aria-required="true" aria-invalid="false" placeholder="Invoice">
                                        </div>

                                        <div class="form-group">
                                            <label for="x_card_code" class="control-label mb-1">Status</label>
                                                <div class="input-group">
                                                        <select id="cc-exp" name="status" type="text"
                                                            class="form-control cc-exp" value="" data-val="true"
                                                            {{!-- data-val-required="Mohon isi Kategori Produk" --}}
                                                            {{!-- data-val-cc-exp="Mohon isi dengan Huruf" --}}
                                                            placeholder="Status" autocomplete="cc-exp">
                                                            <option value="dibayar">dibeli</option>
                                                            <option value="dikemas">diverivikasi</option>
                                                        </select>
                                                </div>
                                        </div>

                                        <div>
                                            <button id="payment-button" type="submit"
                                                class="btn btn-lg btn-info btn-block">
                                                <i class="fa fa-paper-plane fa-lg"></i>&nbsp;
                                                <span>Simpan</span>
                                                {{!-- <span id="payment-button-sending" style="display:none;">Sending…</span> --}}
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- Table --}}

                <div class="section__content section__content--p30">
                    <div class="container-fluid">

                        <div class="row m-t-30">
                            <div class="col-md-12">
                                <h3 class="title-5 m-b-35">pembelian table</h3>
                                <div class="table-data__tool">
                                    <div class="table-data__tool-right">
                                        <button class="au-btn au-btn-icon au-btn--green au-btn--small"
                                            data-toggle="modal" data-target="#modalAddPembelian">
                                            <i class="zmdi zmdi-plus"></i> pembelian</button>
                                    </div>
                                </div>

                                <!-- DATA TABLE-->
                                <div class="table-responsive m-b-40">
                                    <table class="table table-borderless table-data3">
                                        <thead>
                                            <tr>
                                                <th>Distributor</th>
                                                <th>Nama</th>
                                                <th>Jumlah</th>
                                                <th>Harga Beli</th>
                                                <th>Tanggal</th>
                                                <th>Produk</th>
                                                <th>Invoice</th>
                                                <th>Status</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each data.result}}
                                            <tr>
                                                <td>{{this.distributorId.nama}}</td>
                                                <td>{{this.nama}}</td>
                                                <td>{{this.jumlah}}</td>
                                                <td>{{this.harga_beli}}</td>
                                                <td>{{this.tanggal}}</td>
                                                <td>{{this.produkId.nama}}</td>
                                                <td>{{this.inv}}</td>
                                                <td>{{this.status}}</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <a href="/pembelian/edit/{{this.id}}">
                                                            <button class="item" data-toggle="" data-target=""
                                                                data-placement="top" title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>
                                                            </button>
                                                        </a>

                                                        <a href="/pembelian/delete/{{this.id}}">
                                                            <button class="item" data-placement="top" title="Delete">
                                                                <i class="zmdi zmdi-delete"></i>
                                                            </button></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE-->
                            </div>
                        </div>
